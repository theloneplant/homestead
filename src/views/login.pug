transition(name="fade")
	#login-wrapper.container(v-if="!loginStatus.loggedIn")
		.row
			.col-md-4.col-md-offset-4
				transition(name="fade")
					.login-panel.panel.panel-default(v-if="!loginStatus.checkingStatus")
						.panel-heading
							h3.panel-title Please Sign In
						.panel-body
							form(role='form')
								fieldset
									.form-group
										input.form-control(placeholder='E-mail', name='email', type='email', autofocus='')
									.form-group
										input.form-control(placeholder='Password', name='password', type='password', value='')
									.checkbox
										label
											input(name='remember', type='checkbox', value='Remember Me')
											| Remember Me
									a.btn.btn-lg.btn-success.btn-block(href="#" v-on:click.prevent="login()") Login
